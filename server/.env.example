PORT=3001
NODE_ENV=development

# REQUIRED: JWT Secret for signing tokens
# Generate a strong random secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use a weak secret in production!
JWT_SECRET=your-secret-key-change-this-in-production

# Client URL for CORS (optional, defaults handled in server.js)
CLIENT_URL=http://localhost:5173
